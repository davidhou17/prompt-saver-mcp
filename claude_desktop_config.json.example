{
  "mcpServers": {
    "prompt-saver": {
      "command": "uv",
      "args": ["run", "python", "-m", "prompt_saver_mcp.server", "stdio"],
      "cwd": "/path/to/your/prompt-saver-mcp",
      "env": {
        "OPENAI_API_KEY": "your_openai_api_key"
      }
    }
  }
}

